<Window x:Class="ValorantCC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValorantCC" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="vTools - ValorantCC" Height="282" Width="500" SizeToContent="Manual" WindowStartupLocation="Manual" WindowState="Normal" ResizeMode="NoResize" WindowStyle="None" Icon="Resources/vtools-colored.ico"
        Background="#263238">
    
    <UserControl>
        <UserControl.Resources>
            <ResourceDictionary>
                <BitmapImage x:Key="crosshairBg" UriSource="Resources/crosshairBg0.png"/>
            </ResourceDictionary>
        </UserControl.Resources>
        <StackPanel MouseDown="StackPanel_MouseDown">
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.7*"/>
                    <ColumnDefinition Width="1*"/>

                    <ColumnDefinition Width="0.9*"/>
                    <ColumnDefinition Width="1*"/>

                    <ColumnDefinition Width="0.89*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock FontWeight="Bold" Grid.Column="0" Foreground="White">Logged In:</TextBlock>
                <TextBlock Margin="0,1,0,0" FontWeight="Bold" Grid.Column="1" Foreground="Red"
                  x:Name="txt_LoggedIn">
                    ◾
                </TextBlock>

                <TextBlock FontWeight="Bold" Grid.Column="2" Foreground="White">Current Color: </TextBlock>
                <TextBlock Margin="0,1,0,0" FontWeight="Bold" Grid.Column="3" Foreground="Red"
                  x:Name="txt_CurrentColor">
                    ◾
                </TextBlock>
                
                <TextBlock FontWeight="Bold" Grid.Column="4" Foreground="White">Profile Count:</TextBlock>
                <TextBlock Margin="0,1,0,0" FontWeight="Bold" Grid.Column="5" Foreground="Red"
                  x:Name="txt_ProfileCount">
                    0
                </TextBlock>
            </Grid>
            <Grid>
                
                <Image Source="{StaticResource crosshairBg}" Margin="3"/>
                <Grid>
                    <Line x:Name="lineX1" X1="5" Y1="0" X2="0" Y2="0" Stroke="Black" StrokeThickness="2" Margin="250,80,-250,-80"/>
                    <Line x:Name="lineX2" X1="5" Y1="0" X2="0" Y2="0" Stroke="Black" StrokeThickness="2" Margin="240,80,-240,-80"/>
                    <Line x:Name="lineY1" X1="0" Y1="5" X2="0" Y2="0" Stroke="Black" StrokeThickness="2" Margin="247.5,72,-247.5,-72"/>
                    <Line x:Name="lineY2" X1="0" Y1="5" X2="0" Y2="0" Stroke="Black" StrokeThickness="2" Margin="247.5,82.5,-247.5,-82.5"/>
                </Grid>
                
            </Grid>
            
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="profiles" Grid.Column="0" SelectionChanged="profiles_SelectionChanged" SelectedIndex="0"/>
                <xctk:ColorPicker x:Name="colorpicker" DisplayColorAndName="True" Grid.Column="1" SelectedColorChanged="colorpicker_SelectedColorChanged" UsingAlphaChannel="False" ShowStandardColors="False" AdvancedTabHeader="Manual" Margin="2,0" Cursor="Hand"></xctk:ColorPicker>
                <Button Style="{StaticResource SaveButtonHover}" Foreground="White" x:Name="btnSave" Grid.Column="2" Margin="2,0,0,0" Click="btnSave_Click" Cursor="Hand">Save</Button>
                <Button Style="{StaticResource LoginButtonHover}" Foreground="White" x:Name="btnLogin" Grid.Column="3" Margin="2,0,0,0" Click="btnLogin_Click" Cursor="Hand">Login</Button>
            </Grid>
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Margin="2" FontWeight="Bold" Grid.Column="0" Foreground="White">Profile</TextBlock>
                <TextBlock Margin="2" FontWeight="Bold" Grid.Column="1" Foreground="White">Color Picker</TextBlock>

                <Button Style="{StaticResource CloseButtonHover}" Foreground="White" x:Name="btnClose" Grid.Column="3" Margin="0,2" Click="btnClose_Click" Cursor="Hand">Close</Button>
            </Grid>
        </StackPanel>
    </UserControl>
</Window>
