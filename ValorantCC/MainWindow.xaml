<Window x:Class="ValorantCC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValorantCC" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="vTools - ValorantCC" Height="360" Width="500" SizeToContent="Manual" WindowStartupLocation="Manual" WindowState="Normal" ResizeMode="NoResize" WindowStyle="SingleBorderWindow" Icon="Resources/vtools-colored.ico">
    <UserControl>
        <UserControl.Resources>
            <ResourceDictionary>
                <BitmapImage x:Key="crosshairBg" UriSource="Resources/crosshairBg0.png"/>
            </ResourceDictionary>
        </UserControl.Resources>
        <StackPanel>
            <Grid>
                <Image Source="{StaticResource crosshairBg}" Margin="3"/>
                <Grid>
                    <Line x:Name="lineX1" X1="5" Y1="0" X2="0" Y2="0" Stroke="Black" StrokeThickness="2" Margin="250,80,-250,-80"/>
                    <Line x:Name="lineX2" X1="5" Y1="0" X2="0" Y2="0" Stroke="Black" StrokeThickness="2" Margin="240,80,-240,-80"/>
                    <Line x:Name="lineY1" X1="0" Y1="5" X2="0" Y2="0" Stroke="Black" StrokeThickness="2" Margin="247.5,72,-247.5,-72"/>
                    <Line x:Name="lineY2" X1="0" Y1="5" X2="0" Y2="0" Stroke="Black" StrokeThickness="2" Margin="247.5,82.5,-247.5,-82.5"/>
                </Grid>
                
            </Grid>
            
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="profiles" Grid.Column="0" SelectionChanged="profiles_SelectionChanged">
                </ComboBox>
                <xctk:ColorPicker x:Name="colorpicker" DisplayColorAndName="True" Grid.Column="1" Margin="2" SelectedColorChanged="colorpicker_SelectedColorChanged" UsingAlphaChannel="False" ShowStandardColors="False" AdvancedTabHeader="Manual"></xctk:ColorPicker>
                <Button x:Name="btnSave" Grid.Column="2" Margin="2" Click="btnSave_Click">Save</Button>
                <Button x:Name="btnLogin" Grid.Column="3" Margin="2" Click="btnLogin_Click">Login</Button>
            </Grid>
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Margin="2" FontWeight="Bold" Grid.Column="0">Profile</TextBlock>
                <TextBlock Margin="2" FontWeight="Bold" Grid.Column="1">Color Picker</TextBlock>
            </Grid>
            
            <Grid Margin="5,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock FontWeight="Bold" Grid.Column="0" Grid.Row="0">Logged In:</TextBlock>
                <TextBlock x:Name="isLoggedIn"  FontWeight="Bold" Grid.Column="1" Grid.Row="0" Foreground="Red">False</TextBlock>

                <TextBlock FontWeight="Bold" Grid.Column="0" Grid.Row="1">Current Color:</TextBlock>
                <TextBlock x:Name="txt_currentColor" FontWeight="Bold" Grid.Column="1" Grid.Row="1" Foreground="Black">#000000</TextBlock>
                
                <TextBlock FontWeight="Bold" Grid.Column="0" Grid.Row="2">Login Method:</TextBlock>
                <TextBlock x:Name="txt_loginMethod" FontWeight="Bold" Grid.Column="1" Grid.Row="2" Foreground="Red">N/A</TextBlock>
            </Grid>
        </StackPanel>
    </UserControl>
</Window>
